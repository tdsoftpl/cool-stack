{
  "name": "@cool-stack/page",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "dev": "concurrently \"yarn run dev:remix\" \"yarn run dev:arc\" \"yarn run dev:css\"",
    "dev:remix": "remix build && open-cli http://localhost:3333 && remix watch",
    "dev:arc": "arc sandbox",
    "dev:css": "yarn generate:css --watch",
    "generate:css": "tailwindcss -i ../packages/ui/src/global.css -o ./app/styles/style.css --minify",
    "build": "yarn generate:css && remix build",
    "clean": "rimraf server/index.js && rimraf public/build",
    "lint": "cross-env TIMING=1 eslint 'app/**/*.{js,jsx,ts,tsx}'",
    "test": "jest",
    "test:e2e:dev": "cypress open",
    "test:e2e:run": "start-test \"yarn --cwd ../api dev\" 8055 dev 3333 \"npx cypress run\""
  },
  "dependencies": {
    "@cool-stack/api": "*",
    "@cool-stack/configs": "*",
    "@cool-stack/ui": "*",
    "@directus/sdk": "10.3.1",
    "@remix-run/architect": "1.14.3",
    "@remix-run/node": "1.14.3",
    "@remix-run/react": "1.14.3",
    "cross-env": "7.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tiny-invariant": "1.3.1"
  },
  "devDependencies": {
    "@architect/architect": "10.10.3",
    "@remix-run/dev": "1.14.3",
    "@remix-run/eslint-config": "1.14.3",
    "@testing-library/cypress": "9.0.0",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@types/jest": "29.2.4",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.9",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "aws-sdk": "2.1337.0",
    "concurrently": "7.6.0",
    "cypress": "12.8.1",
    "eslint": "8.29.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest-dom": "4.0.3",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.31.11",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-unicorn": "45.0.2",
    "jest": "29.3.1",
    "jest-environment-jsdom": "29.3.1",
    "open-cli": "7.1.0",
    "prettier": "2.8.4",
    "prettier-plugin-tailwindcss": "0.2.4",
    "rimraf": "3.0.2",
    "start-server-and-test": "1.15.4",
    "tailwindcss": "3.2.7",
    "ts-jest": "29.0.5",
    "typescript": "4.9.5"
  }
}
